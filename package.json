{
  "name": "finance-learning-platform",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "docker-compose up",
    "dev:detached": "docker-compose up -d",
    "down": "docker-compose down",
    "build": "docker-compose build",
    "clean": "docker-compose down -v && rm -rf node_modules packages/*/node_modules",
    "backend:dev": "cd packages/backend && npm run dev",
    "frontend:dev": "cd packages/frontend && npm run dev",
    "shared:build": "cd packages/shared && npm run build"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.19",
    "typescript": "^5.5.4"
  }
}
